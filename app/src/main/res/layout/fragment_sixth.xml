<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Sixth">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="300dp"
            android:layout_height="@dimen/big_card_component_height"
            android:layout_marginStart="30dp"
            android:layout_marginTop="248dp"
            android:layout_marginBottom="233dp"
            app:cardBackgroundColor="@color/main_card"
            app:cardCornerRadius="@dimen/big_card_component_corner_radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/small_card_width"
            android:layout_height="@dimen/small_card_height"
            android:layout_marginStart="-50dp"
            android:layout_marginTop="-40dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="@dimen/small_card_border_radius"
            app:layout_constraintStart_toEndOf="@+id/cardView3"
            app:layout_constraintTop_toBottomOf="@+id/cardView3" />


        <android.widget.Button
            android:id="@+id/Nextbutton"
            android:textColor="@color/white"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/next_button_text"
            android:layout_marginEnd="@dimen/card_side_margin"
            android:background="@drawable/success_button"
            android:backgroundTint="#0F2FA1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/prevButton" />

        <android.widget.Button
            android:id="@+id/prevButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="@string/prev_button_text"
            android:background="@drawable/success_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/card_side_margin"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:autofillHints="@string/message_text"
            android:ems="10"
            android:layout_marginTop="@dimen/card_side_margin"
            android:hint="@string/message_text"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>